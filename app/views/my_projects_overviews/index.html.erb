=end%>


<%= toolbar title: project.name+" "+t(:label_overview) do %>
  <% if User.current.allowed_to?(:add_project, nil, global: true) %>
    <li class="toolbar-item">
      <%= link_to new_project_path,
          { class: 'button -alt-highlight mt-0',
            aria: {label: t(:label_project_new)},
            title: t(:label_project_new)} do %>
        <%= op_icon('button--icon icon-add') %>
        <span class="button--text">Create New Project</span>
      <% end %>
    </li>
  <% end %>  
<% end %>

<div class="toolbar-subtitle mb-20">
  <span class="project-id">#3593:</span> Created by <a [href]="url">Rafael Gonz√°lez</a>. Last updated on <span class="date">03/18/2019 2:24 PM</span>.
</div>


<div id="invisible-grid" class="widget-boxes project-overview">
  <% top_fields.each do |f| %>
    <%= rendered_field f %>
  <% end %>
  <div class="grid-block">
    <% middle_fields.each do |f| %>
      <%= rendered_field f %>
    <% end %>
  </div>
</div>
</div>