<% if defined? block_name_id %>
  <%= content_for block_name_id %>
<% end %>

<h3 class="widget-box--header">
  <i class="icon-context icon-projects" aria-hidden="true"></i>
  <span class="widget-box--header-title"><%=l(:label_subproject_plural)%></span>
</h3>

<% if childprojects.any? %>
  <div class="subprojects overview">
    <p>
      <%= childprojects.collect{ |p| link_to(h(p), project_url(p)) }.join(", ").html_safe %>
    </p>
  </div>
<% end %>
